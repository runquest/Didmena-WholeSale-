<div class="container" id="header">
  <div class="row">
    <div class="col s6">
      <ul id='language-menu'>
        <li><%= link_to "LT", locale: "lt"%> |</li>
        <li><%= link_to "EN", locale: "en"%> |</li>
        <li><%= link_to "RU", locale: "ru"%></li>
      </ul>
    </div>
    <div class="col s12 right-top-menu">
      <% if current_user %> 
        <ul id='session-menu'>
          <li><%= link_to t("top_menu.home"), root_path %> | </li>
          <li><%= link_to "Cart", cart_path %> | </li>
          <% if Model.all.any? %>
            <li><%= link_to t("top_menu.models"), models_path %></li>
          <% end %>
        </ul>  
        <div id="login">
          <% if current_user.apps_manager %>
            <!-- <p>You have administrative rights</p> -->
            <%#= render 'layouts/admin_menu' %>
            <%= link_to 'admin home', admin_path %> | 
          <% end %>
          <%= t "header.you_logged_in" %> <%= current_user.fname %> 
          <%= link_to t("header.logout"), session_path("current"), method: :delete %><br/>
        </div>
      <% else %>
        <ul id='session-menu'>
          <li><%= link_to t("top_menu.home"), root_path %> | </li>
          <% if Model.all.any? %>
            <li> <%= link_to t("top_menu.models"), models_path %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="divider"></div>
</div>