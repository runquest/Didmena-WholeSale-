<div class="container">
<%= form_for(@model, :html => { :multipart => true } ) do |f| %>
  <% if @model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@model.errors.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% @model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :code %><br>
      <%= f.text_field :code %>
    </div>
    <div class="input-field col s6">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
       <%= f.collection_select :gender_id, Domain.all.where(domain_name: "GENDER"), :id, :meaning, { prompt: "Choose a gender" }, class: "browser-default" %>
    </div>
    <div class="input-field col s6">
      <%= f.collection_select :category_id, Domain.all.where(domain_name: "CATEGORY"), :id, :meaning, { prompt: "Choose a category" }, class: "browser-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <%= f.fields_for :model_attachments do |p| %>
      <%= p.file_field :avatar, :multiple => true, name: "model_attachments[avatar][]"%>
    <% end %>
    </div>
    <div class="col s6">
      <%= f.label :price %><br>
      <%= f.number_field :price %>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.fields_for :products do |r| %>
        <% if !Domain.all.where(domain_name: "COLOR").blank? %>
          <% Domain.all.where(domain_name: "COLOR").each do |color| %>
            <div class="field" type="checkbox" class="input-field browser-default">

              <%= r.check_box(:color_id, { :multiple => true }, color.id, nil) %> <%= r.label :color_id, color.meaning  %><br>

            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>




    <div class="row">
      <div class="input-field col s6">
        <%= f.label :note %><br>
        <%= f.text_area :note %>
      </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>