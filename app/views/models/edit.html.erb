<div class="container">
  <div class="row">
    <h4><%= @model.title %></h4>
  </div>
  <div class="row">
    <div class="col s6">
      <%= render 'form' %>
      <%= link_to 'Show', @model %> |
      <%= link_to 'Back', models_path %>
    </div>
    <div class="col s6" style="background-color: lightgrey">
      <div class="row">
        <div class="col s12">
          <h5>add color and sizes</h5>
          <%= text_field_tag 'color_box', nil, placeholder: 'Type color' %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <table id="colorSize">
            <thead>
              <tr>
                <th data-field="id">Color</th>
                <% sizes = Domain.where(domain_name: 'SIZE') %>
                  <% sizes.each do |size| %>
                    <th data-field='<%= size.code_value%>'><%= size.code_value%></th>
                  <% end %>
              </tr>
            </thead>
            <tbody id="color_row">
              <% if @model.products.any? %>
                <% @model.products.each do |prdct| %>
                  <% value = Domain.find(prdct.color_id).meaning %>
                  <tr>
                    <td><%= value %></td>
                    <% sizes = Domain.where(domain_name: 'SIZE') %>
                    <% sizes.each do |size| %>
                      <td>
                      <% if prdct.size_id == size.id %>
                        <!-- <#% binding.pry %> -->
                        <input type='checkbox' class='size' id='<%= value %><%=size.code_value %>' checked >
                      <% else %>
                        <input type='checkbox' class='size' id='<%= value %><%=size.code_value %>'>
                      <% end %>
                      <label for='<%= value %><%=size.code_value %>'></label>
                      </td>
                    <% end %>

                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button id="update" class="btn waves-effect waves-light">Update products</button>
        </div>
      </div>
    </div>
  </div>
</div>