<div class="container">
  <div class="row">
    <div class="col s12">
      <h4>Collections</h4>
      <p><%= link_to 'Add new collection', new_collection_path %>
      <div class="row">
        <% @collections.each do |collection| %>
          <div class="col s6">
            <div class="card">
               <div class="card-image">
                <%= image_tag collection.image.url %>
                <span class="card-title">
                  <%=collection.name%>
                </span>
               </div>
              <div class="card-content">
                <p><%=collection.description%></p>
              </div>
              <div class="card-action">
                <%= link_to 'Show', models_path %>
                <%= link_to 'Edit', edit_collection_path(collection) %>
                <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
        