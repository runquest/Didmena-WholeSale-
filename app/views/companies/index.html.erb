<div class="container">

  <p id="notice"><%= notice %></p>

  <h1><%= t('company.title')%></h1>

  <table>
    <thead>
      <tr>
        <th><%= t('company.name')%></th>
        <th><%= t('company.email')%></th>
        <th><%= t('company.status')%></th>
        <th><%= t('company.country')%></th>
        <th><%= t('company.city')%></th>
        <th><%= t('company.address')%></th>
        <th><%= t('company.postal_code')%></th>
        <th><%= t('company.phone')%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.title %></td>
          <td><%= company.email %></td>
          <td><%= company.status %></td>
          <td><%= Domain.find(company.domain_id).meaning %></td>
          <td><%= company.city %></td>
          <td><%= company.street %></td>
          <td><%= company.postal_code %></td>
          <td><%= company.phone %></td>
          <td><%= link_to t('company.show'), company %></td>
          <td><%= link_to t('company.edit'), edit_company_path(company) %></td>
          <td><%= link_to t('company.delete'), company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('company.new_company'), new_company_path %>
</div>