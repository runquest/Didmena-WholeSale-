<div class="container">
<p id="notice"><%= notice %></p>

<h4>All orders</h4>
<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Order date</th>
      <th>Total price</th>
      <th>Contact</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.order_number, order  %></td>
        <td><%= order.order_date %></td>
        <td><%= order.total_price %></td>
        <td><%= order.contact %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, :class => "btn waves-effect waves-light right"  %>
</div>
