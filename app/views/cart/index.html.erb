<div class="container">
  <div class="row">
    <div class="col s12">
      <h4>This is your cart</h4>
      <div><%= link_to 'Empty Your Cart', cart_clear_path %></div>
      <div class="row">
        <div class="col s8 offset-s2">
          <table>
            <thead>
              <tr>
                <th data-field="model-title">Product</th>
                <th data-field="product-color">Color</th>
                <th data-field="product-size">Size</th>
                <th data-field="quantity">Quantity</th>
                <th data-field="quantity">Cost</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% if @cart.any? %>
                <% total = 0 %>
                <% @cart.each do |id, quantity| %>
                  <% product = Product.find(id) %>
                  <% price = Model.find(product.model_id).price %>
                  <tr><%= render "cart_row", product: product, quantity: quantity, price: price %></tr>
                  <% total += quantity.to_i * price %>

                <% end %>
              <% end %>          
            </tbody>
          </table>
        </div>
      </div>
      <div><b>Total cost: </b>EUR <%= total %></div>
      <div class=".align-right"><%= link_to "Confirm order", purchases_path, method: :post %></div>
    </div>
  </div>
</div>


