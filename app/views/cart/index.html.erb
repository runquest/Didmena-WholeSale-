<div class="container">
<h1>YOUR CART</h1>
<%= link_to 'Empty Your Cart', cart_clear_path %>
<% total = 0 %>
  <ul>
  <% @cart.each do |id, quantity| %>
    <% product = Product.find_by_id(id) %>

    <li><%= link_to product.model_id, model_path(product.model_id) %> <%= product.color_id %> <%= product.size_id %></li>
    <li>Quantity: <%= quantity %></li>


    <% total += quantity %>
  <% end %>
  <strong>TOTAL QUANTITY <%= total %></strong>
  </ul>
</div>