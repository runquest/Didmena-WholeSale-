<div class="container">
  <div class="row">
    <div class="col s12">
      <h4>Cart</h4>
      <div><%= link_to 'Back', models_path %></div><br>
        <div class="row">
          <div class="col s6">

            User name: <%= current_user.fname + " " + current_user.lname %><br>
            E-mail: <%= current_user.email %><br>
            <%= link_to 'Edit profile', edit_user_path(current_user) %>
          </div>

          <div class="col s6">
            <% company = Company.find(current_user.company_id) %>
            Company: <%= company.title %><br>
            Address: <%= company.street + " " + company.city + " " + company.postal_code%><br>
            Phone #: <%= company.phone %><br>
            <br>
          </div>
        </div>
      <hr/>

      <div class="row">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> center flash-message"><%= value %></div>
      <% end %>
        <div class="col s8 offset-s2">
          <table>
            <thead>
              <tr>
                <th data-field="model-title">Product</th>
                <th data-field="product-color">Color</th>
                <th data-field="product-size">Size</th>
                <th data-field="quantity">Quantity</th>
                <th data-field="quantity">Cost</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% if @cart.any? %>
                <% total = 0 %>
                <% @cart.each do |id, quantity| %>
                  <% product = Product.find(id) %>
                  <% price = Model.find(product.model_id).price %>
                  <tr><%= render "cart_row", product: product, quantity: quantity, price: price %></tr>
                  <% total += quantity.to_i * price %>
                <% end %>
              <% end %>          
            </tbody>
          </table>
        </div>
      </div>
      <h6 class="right"><b>Total cost: </b>EUR <%= total %></h6>
      <br>
      <br>
      <br>
      <div class="align-right">
        <%= link_to "Confirm order", purchases_path, method: :post, :class => "btn waves-effect waves-light right" %></div>
      <div><%= link_to 'Empty Your Cart', cart_clear_path, :class => "btn waves-effect waves-light left" %></div>
    </div>
  </div>
</div>


